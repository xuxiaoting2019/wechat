@import '../../../../assets/style/base.wxss';
.wrapper {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #00B366;
}
.code-block {
  width: 690rpx;
  height: 806rpx;
  margin: 45rpx auto 0 auto;
  background: #FFF;
}
.code-title {
  height: 89rpx;
  width: 100%;
  border-bottom: 1rpx solid #EBEBEB;
  align-items: center;
  color: #00B366;
  font-size: 32rpx;
}
.code-title-img {
  width: 36rpx;
  height: 36rpx;
  margin: 0 14rpx 0 38rpx;
}
.code-container {
  flex-direction: column;
}
.code-content {
  margin-top: 131rpx;
  margin-bottom: 56rpx;
  color: #666666;
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
}
.code-pic {
  width: 320rpx;
  height: 320rpx;
}