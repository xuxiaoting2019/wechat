/* pages/user/pages/serviceCenter/serviceCenter.wxss */
page {
  background-color: #F3F4F9;
}
.header {
  width: 100%;
  height:222rpx;
  background:#fff;
  display: flex;
  flex: 1;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: row;
}
.topBtn {
  flex-direction: column;
  text-align: center;
}
.topBtn image {
  width:88rpx;
  height:88rpx;
  background:rgba(255,255,255,1);
}
.topBtn text {
  width:115rpx;
  height:40rpx;
  font-size:28rpx;
  color:rgba(0,0,40,1);
  line-height:40rpx;
}
.title {
  height: 80rpx;
  line-height: 80rpx;
  font-size:28prx;
  color:rgba(153,153,153,1);
  margin-left: 36rpx;
}
.container {
  width:750rpx;
  background:rgba(255,255,255,1);
  padding: 0;
}
.li {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #EBEBEB;
  box-sizing: border-box;
  padding-left: 31rpx;
  color:rgba(0,0,40,1);
}
.li:last-child {
  border: none;
}
