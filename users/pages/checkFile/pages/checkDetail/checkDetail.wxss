/* pages/order/order.wxss */
@import '../../../../assets/style/base.wxss';

.v-center{
  align-items: center;
}
.h-center{
  justify-content: center;
}
.both-sides{
  justify-content: space-between;
}
.d-column{
  flex-direction: column;
}
.color-999{
  color: #999;
}
.color-primary{
  color: #00B366;
}
.border-bottom-1rpx{
  border-bottom: 1rpx solid #F0F0F2;
}
.border-right-1rpx{
  border-right: 1rpx solid #F0F0F2;
}
.detail-user-info{
  width: 100%;
  overflow: hidden;
}
.detail-current-status{
  background: #fff;
  font-size: 28rpx;
  padding: 0 0 20rpx 110rpx;
}
.detail-staff-info{
  background: #fff;
  padding: 30rpx;
  margin: 20rpx 0;
}
.margin-l-20{
  margin-left: 20rpx;
}
.font-small-size{
  color: #999;
  font-size: 28rpx;
}
.font-big-size{
  color: #222;
  font-size: 36rpx;
}
.staff-img{
  width: 100rpx;
  height: 100rpx;
}
.staff-icon{
  width: 40rpx;
  height: 40rpx;
}
.detail-order-progress{
  background: #fff;
  padding: 30rpx;
}
.detail-btn{
  padding: 40rpx 30rpx;
}
.width-48{
  width: 48%;
}