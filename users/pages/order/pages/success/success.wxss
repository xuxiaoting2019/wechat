/* pages/order/order.wxss */
@import '../../../../assets/style/base.wxss';

.v-center{
  align-items: center;
}
.h-center{
  justify-content: center;
}
.both-sides{
  justify-content: space-between;
}
.d-column{
  flex-direction: column;
}
.font-color-white{
  color: #fff;
}
.font-big-size{
  font-size: 36rpx;
}
.font-small-size{
  font-size: 24rpx;
}
/* banner */
.success-banner{
  width: 100%;
  height: 360rpx;
  background: #00B366;
}
.order-success-icon{
  width: 155rpx;
  height: 120rpx;
}
.margin-r-10{
  margin-right: 10rpx;
}
.margin-t-30{
  margin-top: -60rpx;
}
.success-bg{
  margin-top: -100rpx;
  position: relative;
  overflow: hidden;
}
.order-success-bg{
  width: 96%;
}
.success-order{
  width: 92%;
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
}
.fixed-bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
}
.success-btn{
  width: 42%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}
