/* pages/order/order.wxss */
@import '../../assets/style/base.wxss';
page {
  height: 100%;
  background: #F3F4F9;
}
.order-person {
  background: #FFF;
  padding: 0 30rpx;
}
.order-person-item {
  display: flex;
  align-items: center;
  height: 179rpx;
  border-bottom: 1rpx solid #EBEBEB;
}
.order-person-type {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  color: #FFF;
  font-size: 24rpx;
  margin-right: 17rpx;
  background: #4F5BFF;
}
.order-person-type-receive{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  color: #FFF;
  font-size: 24rpx;
  margin-right: 17rpx;
  background: #00B366;
}
.order-person-message {
  flex: 1;
}
.order-person-label {
  font-size: 36rpx;
  color: #000028;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: 500;
}
.order-person-value {
  font-size: 28rpx;
  color: #999999;
  height: 40rpx;
  line-height: 40rpx;
}
.order-person-img {
  width: 44rpx;
  height: 44rpx;
}
/* 产品详情 */
.order-detail {
  margin-bottom: 212rpx;
}
.order-detail-item {
  height: 132rpx;
  background: #FFF;
  margin-top: 20rpx;
  display: flex;
  padding: 0 41rpx 0 30rpx;
  justify-content: space-between;
  align-items: center;
}
.order-detail-label {
  font-size: 30rpx;
  color: #000028;
}
.order-detail-value {
  font-size: 28rpx;
  color: #999;
}
/* 协议及下单按钮 */
.checkout {
  flex-direction: column;
}
.agreement {
  height: 42rpx;
  line-height: 42rpx;
  color: #000028;
  margin-bottom: 30rpx;
}
.agreement-link {
  color: #00B366;
}
.button {
  width: 623rpx;
  height: 80rpx;
  border-radius: 60rpx;
  color: #FFF;
  background: #00B366;
  font-size: 32rpx;
}
/* 弹窗样式 */
.weui-half-screen-dialog .weui-half-screen-dialog__hd{
  font-size: 12px;
  background: #00B366;
  width: 100%;
  height: 84rpx;
}
.weui-half-screen-dialog .weui-half-screen-dialog__title{
  font-weight: 100;
  color: #fff;
}
.weui-show .weui-half-screen-dialog{
  border-radius: 0;
}
.weui-show .weui-half-screen-dialog{
  padding: 0;
}
.weui-half-screen-dialog .weui-half-screen-dialog__ft{
  padding: 0;
}
.weui-half-screen-dialog__ft .order-dialog-btn{
  color: #FFF;
  font-size: 35rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #00B366;
  text-align: center;
  padding: 0;
}
.weui-half-screen-dialog__ft button{
  border-radius:0;
}
.weui-icon-img{
  width: 35rpx;
  height: 35rpx;
  margin-right: 20px;
}
/* 弹窗内部页面样式 */
.order-dialog-wrapper{
  padding: 20rpx;
  font-size: 30rpx;
  color:#666;
}
.order-dialog-check{
  margin-top: 25rpx;
}
.weui-input{
  border:1px solid #F3F4F9;
  background:#F3F4F9;
  padding: 10rpx;
  margin: 25rpx 0 0;
}
.order-dialog-info{
  font-size: 28rpx;
  color: #999999;
}
.radio-group{
  margin: 20rpx 0;
}
.order-dialog-itembox{
  height:200rpx;
}
.order-dialog-item{
  background: #F3F4F9;
  color: #4B4B69;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  text-align: center;
  margin: 15rpx 10rpx;
  border: 1px solid #F3F4F9;
}
.order-dialog-checked{
  border-color:#00B366;
  color: #00B366;
}

.radio{
  margin-right: 60rpx;
}
/*radio未选中时样式 */ 
radio .wx-radio-input{ 
  height: 40rpx; 
  width: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #999;
  background: transparent;
 }
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked {
  background-color: transparent!important;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before {
 /* 去除对号 */
 content: ''; 
 width: 28rpx;
 height: 28rpx;
 border-radius: 50%;
 background-color: #00B366;
}