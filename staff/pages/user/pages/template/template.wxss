radio-group {
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.items {
  width:335rpx;
  height:362rpx;
  border-radius:4rpx;
  border:1rpx solid rgba(204,204,204,1);
  margin: 19rpx;
}
.top { 
  height: 297rpx;
}
.title {
  font-size: 28rpx;
  color: #000028;
  margin-left: 24rpx;
  padding-top: 4rpx;
}
.yz {
  width:30rpx;
  height:30rpx;
  margin-right: 12rpx;
  margin-top: 30rpx;
}
.content {
  color: #000028;
  font-size: 24rpx;
  margin-left: 24rpx;
}
.wrap {
  width: 292rpx;
  height: 120rpx;
  padding: 10rpx;
  margin: 15rpx;
}
.wrap text {
  color: #CCCCCC;
}
.footer {
  background-color: #F3F4F9;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  width: calc(100% -2rpx);
  padding: 0 24rpx;
}
.preview {
  color: #00B366;
}

/*radio未选中时样式 */ 
radio .wx-radio-input{ 
  height: 32rpx; 
  width: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #999;
  background: transparent;
 }


/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked {
  background-color: transparent!important;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before {
 /* 去除对号 */
 content: ''; 
 width: 28rpx;
 height: 28rpx;
 border-radius: 50%;
 background-color: #00B366;
}